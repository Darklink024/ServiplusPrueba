
@{
    ViewBag.Title = "Configuración";
}
@Html.Partial("~/Views/Shared/_Configuration.cshtml")


@(Html.Kendo().Splitter()
    .Name("splitter")
    .HtmlAttributes(new { style = "height: 350;" })
    .Panes(horizontalPanes =>
    {
            horizontalPanes.Add()
                .HtmlAttributes(new { id = "left-pane" })
                .Size("50%")
                .Collapsible(true)
                .Content(@<div class="pane-content">
                    @Html.Partial("_ProfileList")
                </div>);

            horizontalPanes.Add()
                .HtmlAttributes(new { id = "right-pane" })
                .Collapsible(true)
                .Size("50%")
                .Content(@<div class="pane-content">
                    @Html.Partial("_ProfileDetail")
                </div>);
    })
)



